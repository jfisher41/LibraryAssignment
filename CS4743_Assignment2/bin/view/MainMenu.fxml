<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" prefHeight="400" prefWidth="500" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuController">
    
    <top>
<VBox id="vbox" xmlns:fx="http://javafx.com/fxml">
      
	<MenuBar fx:id="menuBar">
		<menus>
		<Menu text="Menu">
            <items>
                     <Menu mnemonicParsing="false" text="Authors">
                       <items>
                     <MenuItem fx:id="menuItemAuthors" onAction="#handleMenuAction" text="Author List" />
                           <MenuItem fx:id="menuItemAddAuthors" onAction="#handleMenuAction" text="Add Author" />
                       </items>
                     </Menu>
                     <Menu mnemonicParsing="false" text="Books">
                       <items>
                         <MenuItem fx:id="menuItemBooks" mnemonicParsing="false" onAction="#handleMenuAction" text="Book List" />
                           <MenuItem fx:id="menuItemAddBook" mnemonicParsing="false" onAction="#handleMenuAction" text="Add Book" />
                       </items>
                     </Menu>
               <MenuItem fx:id="menuItemQuit" onAction="#handleMenuAction" text="Quit" />
            </items>
		</Menu>
		</menus>
	</MenuBar>
</VBox>
</top>

<center>
</center>

</BorderPane>
